<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
    <!--  -->
    <constant name="struts.i18n.encoding" value="UTF-8"/>

    <!-- -->
    <constant name="struts.action.extension" value="action"/>

    <!-- -->
    <constant name="struts.serve.static.browserCache" value="false"/>

    <!-- -->
    <constant name="struts.configuration.xml.reload" value="true"/>

    <!-- -->
    <constant name="struts.ognl.allowStaticMethodAccess" value="true"/>

    <!-- -->
    <constant name="struts.devMode" value="true"/>

    <package name="error" extends="struts-default" abstract="true">
        <default-action-ref name="error"></default-action-ref>
        <action name="error">
            <result>/404.jsp</result>
        </action>
    </package>

    <package name="def" extends="struts-default">
        <action name="itemManage">
            <result>/itemManage.jsp</result>
        </action>
        <action name="inStorageManage">
            <result>/inStorage.jsp</result>
        </action>
    </package>


    <package name="login" extends="struts-default">
        <default-interceptor-ref name="defaultStack"/>
        <action name="login" class="com.action.LoginAction">
            <result name="loginSuccess">/index.jsp</result>
            <result name="loginFail">/login.jsp</result>
        </action>
    </package>

    <package name="addItem" extends="struts-default">
        <default-interceptor-ref name="defaultStack"/>
        <action name="addItem" class="com.action.AddItemAction">
            <result name="success">/itemManage.jsp</result>
            <result name="fail">/itemManage.jsp</result>
        </action>
    </package>

    <package name="ItemManage" extends="json-default">
        <action name="getAllItem" class="com.action.GetAllItemAction">
            <result name="success" type="json">
                <param name="root">result</param>
            </result>
        </action>
        <action name="delSelectItem" class="com.action.DelSelectedItemAction">
            <result name="success" type="json">
                <param name="root">result</param>
            </result>
        </action>
        <action name="delItem" class="com.action.DelItemAction">
            <result name="success">/itemManage.jsp
            </result>
        </action>
        <action name="editItem" class="com.action.EditItemAction">
            <result name="success">/itemManage.jsp</result>
        </action>
        <action name="delItems" class="com.action.DelItemsAction">
            <result name="success">/itemManage.jsp</result>
        </action>
    </package>

</struts>
